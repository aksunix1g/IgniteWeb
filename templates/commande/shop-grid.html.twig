{% extends 'template.html.twig' %}

    {% block section %}

        <div class="container">
            <div class="row">

                <!-- Shop Grid -->
                <div class="col-lg-12">

                    <div class="row shop-grid-page">

 {% for Product in Products %}

     <div class="col-lg-3 col-md-4 col-sm-6 col-12">
         <div class="product--2 product__grid">
             <div class="product__imges">
                 <a href="shop-single.html">

                     <img src="{{ asset(Product.imageproduit) }}" alt="product images">
                 </a>
                 <div class="product__cart__wrapper">
                     <ul class="cart__list">
                         <li><a onclick="addToCart({{ Product.id }})"><span
                                         class="ti-shopping-cart"></span></a></li>
                         <li><a data-toggle="modal" data-target="#productModal"
